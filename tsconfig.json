{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "ES2021",
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "declaration": true,
      "sourceMap": true,
      "outDir": "dist",
      "rootDir": "src",
    },
    "exclude": [
      "src/tests",
      "dist",
      "node_modules",
    ],
    "lib": ["ES2021"],
}